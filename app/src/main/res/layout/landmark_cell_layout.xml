<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landmark_cell_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/landmark_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:background="@drawable/shadowborder">

        <ImageView
            android:id="@+id/landmark_icon"
            android:layout_width="356dp"
            android:layout_height="119dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:paddingRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bell_bears"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/landmark_name"
            android:layout_width="334dp"
            android:layout_height="27dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:text="landmark_name"
            android:textColor="@color/default_text_color"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/landmark_icon"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/landmark_distance"
            android:layout_width="172dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:gravity="right"
            android:text="super far away"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/landmark_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>